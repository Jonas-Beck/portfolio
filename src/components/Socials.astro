---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialItem from "./SocialItem.astro"


// Get array of experience objects from content/experience/ .yaml files
const socialEntries : CollectionEntry<"socials">[] = await getCollection("socials");


---
<div class="mt-8 flex flex-col">
  {socialEntries
    // Map all entries and return a socialItem for each item
    .map((entry) => (
    <SocialItem social={entry} />
  ))}
</div>
